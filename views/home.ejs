
<% if(Dark == "true") { %>
<%- include("partials/headerDark") -%>
<style>body{background-color: black;} .posting-body label{color: white;}</style>
<% } else{ %>
   <%- include("partials/header") -%>
 <style>.posting-body label{color:black;}</style>
<% } %>
<div class="posting-body">
   <div class="form-group row">
      <form action="/" method="post">
         <div class="">
          <label for="">Title</label>
          <input type="text" name="postTitle" class="form-control" autocomplete="off">
         </div>
         <div class="col-lg-6 position-absolute colordiv">
         <label for="exampleColorInput" class="form-label">Color</label>
          <input type="color" class="form-control form-control-color" name="pColor" id="exampleColorInput" value="#563d7c" title="Choose your color">
         </div>
          <div class="col-lg-6">
          <label for="exampleColorInput" class="form-label">Font Color</label>
          <input type="color" class="form-control form-control-color" name="fColor" id="exampleColorInput" value="#ffffff" title="Choose your color">
         </div>
          <label for="">Post</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" cols="30" name="postBody" required></textarea>
          <button type="submit" name="button" class="btn btn-primary">Publish</button>
      </form>
      
  </div>
</div>

<% Posts.forEach(function(post){%>
   <%const postColor = post.color %>
   <%console.log(postColor)%>
   <div class="container-fluid" id="posts" style="background-color: <%=postColor%>; color: <%=post.fontC%>;">
       <h1><%= post.title %></h1>
       <%if(post.body.length >700){%>
    <p><%= post.body.substring(0, 700) + " ..." %> <a href="posts/<%= post.title%>">Read More</a> </p>
         <%}else{%>
            <p><%=post.body%></p>
            <%}%>
   </div>


 <%});%>

 <% if(Dark == "true") { %> 
   <%- include("partials/footerDark") -%>
   <% } else{ %>
      <%- include("partials/footer") -%>
   <% } %>
